{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "beforeBuildCommand": "bunx tailwindcss -i ./src/tw.css -o ./src/index.css -m -c ./tailwind.config.js",
    "beforeDevCommand": "bunx tailwindcss -i ./src/tw.css -o ./src/index.css -m -c ./tailwind.config.js",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Malcrow",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Malcrow",
        "width": 620,
        "height": 400,
        "minHeight": 400,
        "minWidth": 620
      }
    ],
    "security": {
      "csp": null
    },
    "systemTray": {
        "iconPath": "icons/icon.png",
        "iconAsTemplate": true
      },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.rare1k.malcrow",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      
      "windows":{
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": {
          "installMode": "both",
          "compression":"lzma"

        },
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": null
      }
    }
  }
}
