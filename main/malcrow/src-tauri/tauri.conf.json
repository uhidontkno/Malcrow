{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "beforeBuildCommand": "bunx tailwindcss -i ./src/tw.css -o ./src/index.css -m -c ./tailwind.config.js",
    "beforeDevCommand": "bunx tailwindcss -i ./src/tw.css -o ./src/index.css -m -c ./tailwind.config.js",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "malcrow",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Malcrow",
        "width": 800,
        "height": 500
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.rare1k.malcrow",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ]
    }
  }
}
